<#-- Footer template with metadata links -->
<footer class="report-footer">
  <div class="footer-section">
    <#if footer.ci_job_name?has_content && footer.ci_job_url?has_content>
      Report generated by: <a href="${footer.ci_job_url}">${footer.ci_job_name}</a>
    <#elseif footer.ci_job_name?has_content>
      Report generated by: ${footer.ci_job_name}
    <#else>
      Report generated by: CI
    </#if>
  </div>

  <div class="footer-section">
    <#if metadata.repository?has_content>
      Git repo: <a href="https://github.com/${metadata.repository}">${metadata.repository}</a>
    </#if>

    <#if metadata.branch?has_content && metadata.repository?has_content>
      <#if metadata.repository?has_content>|</#if> Branch: <a href="https://github.com/${metadata.repository}/tree/${metadata.branch}">${metadata.branch}</a>
    <#elseif metadata.branch?has_content>
      <#if metadata.repository?has_content>|</#if> Branch: ${metadata.branch}
    </#if>

    <#if metadata.commit_sha?has_content && metadata.repository?has_content>
      | Commit: <a href="https://github.com/${metadata.repository}/commit/${metadata.commit_sha}">${metadata.commit_sha?substring(0, 7)}</a>
    <#elseif metadata.commit_sha?has_content>
      | Commit: ${metadata.commit_sha?substring(0, 7)}
    </#if>

    <#if metadata.timestamp?has_content>
      â€¢ Built at: ${metadata.timestamp}
    </#if>
  </div>

  <div class="footer-section">
    <#if footer.trivy_version?has_content>
      <a href="https://github.com/aquasecurity/trivy">trivy ${footer.trivy_version}</a>
    <#else>
      <span class="footer-missing" title="Trivy version not provided">trivy</span>
    </#if>

    <#if footer.semgrep_version?has_content>
      | <a href="https://github.com/semgrep/semgrep">semgrep ${footer.semgrep_version}</a>
    <#else>
      | <span class="footer-missing" title="Semgrep version not provided">semgrep</span>
    </#if>

    <#if footer.toolkit_version?has_content>
      | <a href="https://github.com/Avarko/gh-security-toolkit">gh-security-toolkit ${footer.toolkit_version}</a>
    <#else>
      | <a href="https://github.com/Avarko/gh-security-toolkit">gh-security-toolkit</a>
    </#if>
  </div>

  <div class="footer-section">
    Application:
    <#if footer.app_docs_url?has_content>
      <a href="${footer.app_docs_url}">ðŸ“˜ Docs</a>
    <#else>
      <span class="footer-missing" title="App's GHA job does not provide link to Docs">ðŸ“˜ Docs</span>
    </#if>
    |
    <#if footer.app_issues_url?has_content>
      <a href="${footer.app_issues_url}">ðŸ’¬ Issues</a>
    <#else>
      <span class="footer-missing" title="App's GHA job does not provide link to Issues">ðŸ’¬ Issues</span>
    </#if>
  </div>
</footer>
